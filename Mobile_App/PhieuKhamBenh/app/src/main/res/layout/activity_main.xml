<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2pt">
            <TextView
                android:id="@+id/tvPhieuKhamBenh"
                android:text="Phiếu khám bệnh"
                android:textSize="14pt"
                android:textColor="#E17070"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/imgAvatar"
                android:src="@mipmap/ic_launcher"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tvGioiTinh"
                android:text="Giới tính"
                android:textSize="6pt"
                android:textColor="#3F51B5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:id="@+id/radGroupGT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radNam"
                        android:text="Nam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/radNu"
                        android:text="Nữ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
            <TextView
                android:id="@+id/tvHoTen"
                android:text="Họ tên"
                android:textSize="6pt"
                android:textColor="#3F51B5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtHoTen"
                android:hint="Nhập họ tên bệnh nhân"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvNgaySinh"
                android:text="Ngày sinh"
                android:textSize="6pt"
                android:textColor="#3F51B5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtNgaySinh"
                android:hint="dd/mm/yyyy"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvSoDT"
                android:text="Số điện thoại"
                android:textSize="6pt"
                android:textColor="#3F51B5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtSDT"
                android:hint="Nhập số điện thoại"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvDichVu"
                android:text="Dịch vụ"
                android:textSize="6pt"
                android:textColor="#3F51B5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/cbxKSK"
                android:text="Khám sức khỏe - 200.000VNĐ"
                android:textSize="7pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/cbxXNM"
                android:text="Xét nghiệm máu - 350.000VNĐ"
                android:textSize="7pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/cbxCXQ"
                android:text="Chụp X-Quang - 1.000.000VNĐ"
                android:textSize="7pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvThanhTien"
                android:text="Thành tiền:"
                android:textSize="6pt"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="#2196F3"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnXacNhan"
                android:text="Xác nhận"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvKetQua"
                android:text="Kết quả..."
                android:textColor="#FF9800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>